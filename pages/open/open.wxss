.avatar_wrapper {
    height: 200px;
    padding-top: 50px;
}

.avatar {
    display: block;
    margin: 0 auto;
    width: 100px;
    height: 100px;
    border-radius: 50%;
    border: 2px solid #d9dbde;
}

.nickname {
    line-height: 50px;
    font-size: 16pt;
    color: #fff;
    letter-spacing: 2px;
    text-align: center;
}

.toptip {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    line-height: 30px;
    color: #fff;
    font-size: 14px;
    text-align: center;
    background-color: #e64340;
    overflow: hidden;
    transition: height 0.5s ease-in-out;
}

.section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 50px;
    color: #fff;
    font-size: 14px;
    background-color: #626262;
    margin-bottom: 4px;
}

.section__title {
    flex: 0 0 100px;
    font-size: 16px;
    text-align: center;
}

input:disabled {
    color: #fff;
}

.section>input {
    flex: 1 1 auto;
    height: 50px;
}

.section picker {
    flex: 1 1 auto;
    height: 50px;
}

