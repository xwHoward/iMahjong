.selection_group {
    width: 100%;
    background-color: #626262;
    margin-bottom: 4px;
    overflow-y: hidden;
    transition: height 0.5s ease-in-out;
}

.selection_wrapper {
    height: 90px;
    width: 450px;
    min-width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: nowrap;
    padding: 0 30rpx;
}

.selection {
    box-sizing: content-box;
    flex: 0 0 70px;
    width: 70px;
    height: 70px;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    border-radius: 50%;
    background-color: #ffe30d;
}

.selection .group {
    flex: 0 0 30px;
    height: 30px;
    line-height: 40px;
    color: #fff;
    font-size: 16px;
}

.selection .desc {
    flex: 0 0 30px;
    height: 30px;
    line-height: 30px;
    color: #eee;
    font-size: 12px;
}

.selection_wrapper .selection:nth-child(1) {
    background-color: #4caf50;
}

.selection_wrapper .selection:nth-child(2) {
    background-color: #ffc107;
}

.selection_wrapper .selection:nth-child(3) {
    background-color: #ff9800;
}

.selection_wrapper .selection:nth-child(4) {
    background-color: #ff5722;
}

.selection_wrapper .selection:nth-child(5) {
    background-color: #9e9e9e;
}

.selection.selected {
    border: 3px solid #fff;
}

.btn {
    height: 50px;
    line-height: 50px;
    color: #515151;
    letter-spacing: 4px;
    background-color: #ffe30d;
    border-top: 2px solid #515151;
    border-radius: 0;
}

.btn::after {
    border-radius: 0;
}

.btn:active {
    background-color: #ff9800;
}

.btn image {
    height: 24px;
    width: 24px;
    margin-right: 14px;
    margin-left: 10px;
    vertical-align: -5px;
}
