.selection_group {
    height: 80px;
    width: 100%;
    background-color: #626262;
    margin-bottom: 4px;
}

.selection_wrapper {
    height: 80px;
    width: 400px;
    min-width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    flex-wrap: nowrap;
    padding: 0 30rpx;
}

.selection {
    flex: 0 0 50px;
    width: 50px;
    height: 50px;
    line-height: 50px;
    /* margin: 0 30rpx; */
    color: #fff;
    font-size: 12px;
    text-align: center;
    border-radius: 50%;
    background-color: #e64340;
}

.selection text {
    font-size: 10px;
}

.selection.selected {
    border: 2px solid #fff;
}

.btn {
    height: 50px;
    line-height: 50px;
    color: #515151;
    letter-spacing: 4px;
    background-color: #ffe30d;
    border-top: 2px solid #515151;
    border-radius: 0;
}

.btn::after {
    border-radius: 0;
}

.btn:active {
    background-color: #ff9800;
}

.btn image {
    height: 24px;
    width: 24px;
    margin-right: 14px;
    margin-left: 10px;
    vertical-align: -5px;
}
