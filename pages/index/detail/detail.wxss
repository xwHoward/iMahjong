.bg_img {
    width: 100%;
}

.title {
    line-height: 100px;
    color: #fff;
    font-size: 16px;
    text-align: center;
}

.card {
    box-sizing: border-box;
    position: relative;
    width: 650rpx;
    margin: 0 auto;
    padding: 30px 15px 0;
    background-color: #fff;
    border-radius: 10px;
}

.head {
    position: absolute;
    top: -24px;
    left: 50%;
    margin-left: -24px;
    width: 48px;
    height: 48px;
    border-radius: 50%;
}

.row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100px;
}

.row .left {
    flex: 1 1 auto;
    margin-right: 20px;
}

.label {
    height: 30px;
    line-height: 30px;
    color: #515151;
    font-size: 14px;
}

.creator {
    line-height: 30px;
    color: #333;
    font-size: 18px;
    font-weight: bold;
    letter-spacing: 2px;
    text-align: center;
}

.time {
    line-height: 30px;
    color: #f44336;
    font-size: 18px;
    font-weight: bold;
    letter-spacing: 2px;
    text-align: center;
}

.date {
    line-height: 30px;
    color: #333;
    font-size: 14px;
    text-align: center;
}

.row .right {
    flex: 0 0 100px;
    width: 100px;
    height: 100px;
    border-radius: 50%;
}

.remark {
    box-sizing: border-box;
    flex: 0 0 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 80px;
    padding: 25px 10px;
    font-size: 12px;
    color: #333;
    background: #fff url('data:image/png;base64,') center center no-repeat;
    background-size: cover;
}

.mid_head {
    height: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    margin-left: -15px;
    margin-right: -15px;
    font-size: 14px;
    color: #666;
    background-color: #fff399;
}

.mid_body {
    height: 50px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    margin-left: -15px;
    margin-right: -15px;
    font-size: 16px;
    color: #333;
    background-color: #fff9cc;
    border-bottom: 2px dashed #515151;
}

.left_circle {
    position: absolute;
    top: 294px;
    left: -15px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #515151;
}

.right_circle {
    position: absolute;
    top: 294px;
    right: -15px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #515151;
}

.match_place {
    height: 50px;
    line-height: 50px;
    font-size: 16px;
    text-align: center;
}
#map{
    width: 650rpx;
    height: 150px;
    margin-left: -15px;
}
.btn {
    height: 60px;
    line-height: 60px;
    margin: 50px 50rpx;
    color: #515151;
    letter-spacing: 4px;
    background-color: #ffe30d;
    border-top: 2px solid #515151;
    /* border-radius: 0; */
}

