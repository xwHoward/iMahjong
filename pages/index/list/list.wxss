page {
    background-color: #515151;
    padding: 50px 0;
}

.filter {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 50px;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    color: #fff;
    font-size: 18px;
    background-color: #666;
}

.filter .caret {
    height: 24px;
    width: 24px;
    margin-left: 10px;
}

.list {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-pack: distribute;
    justify-content: space-around;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
}

.match {
    -webkit-box-flex: 0;
    -ms-flex: 0 0 100px;
    flex: 0 0 100px;
    position: relative;
    width: 100px;
    height: 160px;
    margin: 10px;
}

.avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    border: 2px solid #fff;
}

.head {
    position: absolute;
    top: 70px;
    right: 0;
    width: 30px;
    height: 30px;
    /* background-color: #666; *//* border-radius: 50%; */
}

.nickname {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    height: 30px;
    font-size: 12px;
    word-break: break-all;
    text-align: center;
    color: #fff;
}

.gender {
    -webkit-box-flex: 0;
    -ms-flex: 0 0 16px;
    flex: 0 0 16px;
    width: 16px;
    height: 16px;
    margin-left: 2px;
}

.address {
    height: 30px;
    font-size: 10px;
    color: #fff;
    text-align: center;
}
.seat {
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    text-align: center;
}

.seat.seat_1 {
    color: #ff5722;
}
.seat.seat_2 {
    color: #ff9800;
}
.seat.seat_3 {
    color: #ffc107;
}
.seat.seat_-1 {
    color: #cddc39;
}

.placeholder image {
    display: block;
    width: 128px;
    height: 128px;
    margin: 20px auto;
}

.nothing {
    line-height: 30px;
    padding: 10px 30px;
    font-size: 16px;
    color: #8a8a8a;
    text-align: center;
}
